    <style name="Theme.Application_Flamingo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Application_Flamingo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
