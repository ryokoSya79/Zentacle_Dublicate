<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Fragment"
    android:background="@color/white_main"
    android:id="@+id/mainFragProfile">




    <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/avatar_image_profile"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="140dp"
                android:scaleType="centerCrop"
                app:civ_border_overlay="true" />

            <TextView
                android:id="@+id/name_profile"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="240dp"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:fontFamily="@font/amiko_bold"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/round_lauout_divelogs_visit">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_profile_divelogs" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_location_icon_main_white_profile" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dive Logs"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amiko_bold"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="93dp"
                    android:layout_marginLeft="70dp"/>

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visited Sites"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amiko_bold"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="93dp"
                    android:layout_marginLeft="220dp"/>

                <TextView
                    android:id="@+id/number_diveLogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amiko_bold"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="92dp"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/number_visite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amiko_bold"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="258dp"
                    android:textSize="17dp"/>
            </FrameLayout>



            <FrameLayout
                android:id="@+id/edit_text_about_me"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="450dp"
                android:background="@drawable/round_lauout_coment">



                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="About Me"
                    android:textColorHint="@color/text_skip"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:textColor="@color/black"
                    android:fitsSystemWindows="true" />
                <ImageView
                    android:id="@+id/corect_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_corect_about_me"
                    android:layout_marginLeft="322dp"/>
            </FrameLayout>





    <ImageView
        android:id="@+id/clue_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/clue_about_me" />


    <ImageView
        android:id="@+id/clue_click_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="190dp"
        android:src="@drawable/ic_click_save" />

    <ImageView
        android:id="@+id/connect_errProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-100dp"
        android:src="@drawable/component_20" />

    <ImageView
        android:id="@+id/button_menu_logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_three_button" />

    <ImageView
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_log_out"
        android:layout_marginLeft="251dp"
        android:layout_marginTop="55dp"/>



</FrameLayout>