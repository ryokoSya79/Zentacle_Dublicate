<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment2"
    android:background="@color/white_main">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easily track your dives \n in a modern interface"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="25dp"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/skip_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/text_skip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="680dp"
        android:backgroundTint="@color/white_main"
        android:background="@drawable/round"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:fontFamily="@font/amiko_bold"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/amiko_bold"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:src="@drawable/reg_image_2"
        android:layout_gravity="center"
        android:layout_marginTop="-130dp"
        android:layout_marginLeft="2dp" />

</FrameLayout>