<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiveLogsFragment"
    android:background="@color/white_main">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_big_icon_dive_logs"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no Dive Logs"
        android:textColor= "@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/amiko_bold"
        android:textSize="27dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp" />
    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your dive logs are displayed here"
        android:textColor= "@color/text_skip"
        android:textStyle="bold"
        android:fontFamily="@font/amiko_bold"
        android:textSize="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dive Logs"
        android:textColor= "@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/amiko_bold"
        android:textSize="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_viewDiveLogs"
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/connect_errDiveLogs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-100dp"
        android:src="@drawable/component_20" />

</FrameLayout>