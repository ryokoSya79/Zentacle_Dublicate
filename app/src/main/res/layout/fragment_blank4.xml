<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment4"
    android:background="@color/white_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:fontFamily="@font/amiko_bold"
        android:textStyle = "bold"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="100dp"
        />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Email"
        android:autofillHints="emailAddress"
        android:textColorHint="@color/text_skip"
        android:layout_marginTop="215dp"
        android:textColor="@color/black"
        android:background="@drawable/round_to_edit"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="20dp"
        android:minHeight="48dp"/>


    <EditText
        android:id="@+id/pass_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:autofillHints="password"
        android:textColorHint="@color/text_skip"
        android:layout_marginTop="280dp"
        android:textColor="@color/black"
        android:background="@drawable/round_to_edit"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/sign_in_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textAllCaps="false"
        android:background="@drawable/gradient"
        android:layout_marginTop="362dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/amiko_bold"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textStyle="bold"
        android:layout_marginTop="430dp"
        android:textColor="@color/black"
        android:layout_marginLeft="90dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/text_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginTop="430dp"
        android:textColor = "@color/start_color"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/amiko_bold"
        android:layout_marginLeft="250dp"/>

    <ImageView
        android:id="@+id/err_email_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-110dp"
        android:src="@drawable/ic_err_email_or_pass" />


</FrameLayout>