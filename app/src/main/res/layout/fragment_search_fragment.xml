<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_fragment"
    android:background="@color/white_main">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor= "@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/amiko_bold"
                android:textSize="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/black"
                android:hint="Location, site, tags"
                android:textColorHint="@color/text_skip"
                android:background="@drawable/round_to_edit"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/search_edittext"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Searches"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="@font/amiko_bold"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="185dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_beach"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="beach"
                        android:textAllCaps="false"
                        android:background="@drawable/background_button_home_non_press"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/button_corals"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="corals"
                        android:textAllCaps="false"
                        android:background="@drawable/background_button_home_non_press"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"/>

                    <Button
                        android:id="@+id/button_dive"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="dive"
                        android:textAllCaps="false"
                        android:background="@drawable/background_button_home_non_press"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"/>

                    <Button
                        android:id="@+id/button_diveParty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="dive party"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:background="@drawable/background_button_home_non_press"
                        android:layout_marginLeft="10dp"/>

                    <Button
                        android:id="@+id/button_party"
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="party"
                        android:textAllCaps="false"
                        android:background="@drawable/background_button_home_non_press"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="19dp"
                android:fontFamily="@font/amiko_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="310dp"/>

            <TextView
                android:id="@+id/seeAll_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor = "@color/black"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="303dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/amiko_bold"
                android:textSize="19dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="110dp"
                        android:layout_height="220dp"
                        android:src="@drawable/bali_search" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="110dp"
                        android:layout_height="220dp"
                        android:src="@drawable/palao_search"
                        android:layout_marginLeft="15dp"/>

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="110dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:src="@drawable/baohol_search"
                        android:layout_marginLeft="15dp"/>

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="110dp"
                        android:layout_height="220dp"
                        android:layout_weight="1"
                        android:src="@drawable/noh_tao_search"
                        android:layout_marginLeft="15dp"/>


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dive shops"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="19dp"
                android:fontFamily="@font/amiko_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="610dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="650dp"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/connect_errSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-100dp"
                android:src="@drawable/component_20" />
        </FrameLayout>
    </ScrollView>



</FrameLayout>